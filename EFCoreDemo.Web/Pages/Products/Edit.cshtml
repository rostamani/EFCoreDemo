@page "{id:int}"
@model EFCoreDemo.Web.Pages.Products.EditModel
@{
}

<form method="post">
    <input type="hidden" asp-for="EditProduct.ProductId"/>
    <div class="form-group">
        <label asp-for="EditProduct.Name">Name:</label>
        <input class="form-control" asp-for="EditProduct.Name">
        <span asp-validation-for="EditProduct.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditProduct.UnitPrice">Price:</label>
        <input class="form-control" asp-for="EditProduct.UnitPrice">
        <span asp-validation-for="EditProduct.UnitPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EditProduct.CategoryId">Category:</label>
        <select asp-items="Model.Categories" class="form-control" asp-for="EditProduct.CategoryId"></select>
        <span asp-validation-for="EditProduct.CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>